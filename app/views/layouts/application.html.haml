    / React and JQuery
    %script{:src => "https://unpkg.com/react@15/dist/react.min.js"}
    %script{:src => "https://unpkg.com/react-dom@15/dist/react-dom.min.js"}
    %script{:src => "https://code.jquery.com/jquery-2.1.4.min.js"}
    / Opal and Hyperloop
    %script{:src => "https://rawgit.com/ruby-hyperloop/hyperloop-js/master/opal-compiler.min.js"}
    %script{:src => "https://rawgit.com/ruby-hyperloop/hyperloop-js/master/hyperloop.min.js"}

  %body
    =yield
